{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/famasya/codesession",
  "title": "Extended OpenCode AI Configuration",
  "description": "Configuration schema for codesession",
  "type": "object",
  "properties": {
    "opencode": {
      "description": "opencode configuration",
      "type": "object",
      "properties": {
        "config": {
          "$ref": "https://opencode.ai/config.json"
        }
      }
    },
    "bot_token": {
      "type": "string",
      "description": "API token for Discord bot"
    },
    "opencode_port": {
      "type": "integer",
      "description": "Port for the opencode service"
    },
    "log_level": {
      "type": "string",
      "description": "Logging level",
      "enum": [
        "debug",
        "info",
        "warn",
        "error"
      ]
    },
    "summarizer_instruction": {
      "type": "string",
      "description": "Optional: custom instruction for the commit summarizer. Leave empty to use the built-in default prompt."
    },
    "repositories": {
      "type": "array",
      "description": "Array of repositories to monitor",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Absolute path to the repository"
          },
          "name": {
            "type": "string",
            "description": "Name of the repository"
          }
        },
        "required": [
          "path",
          "name"
        ]
      }
    }
  },
  "required": [
    "bot_token",
    "opencode_port",
    "log_level",
    "openrouter_key",
    "summarizer_instruction",
    "models",
    "repositories"
  ],
  "additionalProperties": false
}
